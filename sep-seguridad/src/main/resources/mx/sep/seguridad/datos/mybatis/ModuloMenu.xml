<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mx.sep.seguridad.dao.ModuloMenuDao">

	<resultMap type="ModuloMenu" id="resultModuloMenu">
		<id property="id" column="id_t_modulo"/>
		<result property="modulo" column="v_modulo"/>
		<collection property="opcionesMenu" ofType="OpcionMenu" resultMap="mx.sep.seguridad.dao.OpcionMenuDao.resultOpcionMenu"></collection>
	</resultMap>

	<select id="consultarTodos" resultMap="resultModuloMenu">
		select * from seguridad.t_modulo_menu;
	</select>
	
	<select id="consultarModulo" resultMap="resultModuloMenu">
		select * from seguridad.t_modulo_menu where id_t_modulo = #{id};
	</select>
	
	<select id="consultarModuloOpciones" resultMap="resultModuloMenu">
		select * from seguridad.t_modulo_menu mo
		inner join seguridad.t_opcion_menu op on mo.id_t_modulo = op.id_t_modulo
		where mo.id_t_modulo = #{id};
	</select>
</mapper>