<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"       
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="mx.sep.sajja.daos"/>
	
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="org.postgresql.Driver" />
		<property name="url" value="jdbc:postgresql://localhost/sajja" />
		<property name="username" value="pruebas" />
		<property name="password" value="pruebas" />
		<property name="initialSize" value="2" />
		<property name="maxActive" value="5" />
	</bean>
	
	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="mx.sep.sajja.dao" />
	</bean>
	
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation" value="classpath:mx/sep/sajja/datos/mybatis-sqlmap.xml" />
		<property name="typeAliasesPackage" value="mx.sep.sajja.modelo" />
		<property name="mapperLocations" value="classpath*:mx/sep/sajja/datos/mybatis/**/*.xml" />
	</bean>
	
	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
	    p:dataSource-ref="dataSource" />
    
</beans>
