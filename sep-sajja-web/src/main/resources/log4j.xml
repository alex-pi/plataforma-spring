<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="null">

    <appender name="SystemOut" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%d{ABSOLUTE} %5.5p %70.40c - %m%n"/>
        </layout>
    </appender>

    <appender name="ASYNC" class="org.apache.log4j.AsyncAppender">
        <param name="Blocking" value="false"/>
        <param name="BufferSize" value="10480"/>
        <appender-ref ref="SystemOut"/>
    </appender>

    <!--<appender name="SQLLogger" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="hibernate.sql.log"/>
        <param name="encoding" value="UTF-8"/>
        <param name="datePattern" value="'.'yyyy-MM-dd-HH"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%d{ABSOLUTE} %5.5p %70.40c - %m%n"/>
        </layout>
    </appender>

    <appender name="ASYNCSQL" class="org.apache.log4j.AsyncAppender">
        <param name="Blocking" value="false"/>
        <param name="BufferSize" value="10480"/>
        <appender-ref ref="SQLLogger"/>
    </appender>-->

    <logger name="org.springframework"><level value="warn"/></logger>
    <logger name="org.springframework.remoting"><level value="trace"/></logger>
    <logger name="org.springframework.webflow"><level value="error"/></logger>
    <logger name="org.springframework.js"><level value="error"/></logger>
    <logger name="org.springframework.jdbc.datasource.init"><level value="error"/></logger>

    <logger name="org.springframework.orm"><level value="error"/></logger>
    <logger name="org.springframework.aop"><level value="error"/></logger>
    <logger name="org.springframework.orm.hibernate3.HibernateTemplate"><level value="error"/></logger>
    <logger name="org.springframework.security.access.annotation"><level value="error"/></logger>
    <logger name="org.springframework.security"><level value="error"/></logger>
    <logger name="org.springframework.security.access"><level value="error"/></logger>
    <logger name="org.springframework.security.access.intercept"><level value="error"/></logger>
    <logger name="org.springframework.security.access.expression"><level value="error"/></logger>

    <logger name="org.springframework.security.web.access"><level value="error"/></logger>
    <logger name="org.springframework.security.web"><level value="debug"/></logger>
    <logger name="org.springframework.security.web.servlet"><level value="debug"/></logger>
    <logger name="org.springframework.security.web.access.intercept"><level value="error"/></logger>
    <logger name="org.springframework.security.web.access.expression"><level value="error"/></logger>
    <logger name="org.springframework.security.access.vote"><level value="error"/></logger>
    <logger name="org.springframework.security.core"><level value="error"/></logger>
    <logger name="org.springframework.security.config.http"><level value="error"/></logger>
    <logger name="org.springframework.security.config"><level value="error"/></logger>

    <root>
        <priority value ="warn"/>
        <appender-ref ref="ASYNC"/>
    </root>
</log4j:configuration>